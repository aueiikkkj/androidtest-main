<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ODS2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp">

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="Fome zero e agriculutra sustentável"
          android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/img"
          android:layout_centerHorizontal="true"
          android:text="Concentra-se em garantir a segurança alimentar, melhorando a nutrição e promovendo a agricultura sustentável para erradicar a fome e alcançar a segurança alimentar global."
          android:textAppearance="@style/TextAppearance.AppCompat.Title" />

      <ImageView
          android:id="@+id/img"
          android:layout_width="170dp"
          android:layout_height="170dp"
          android:layout_marginVertical="50dp"
          android:src="@drawable/ods2"
          android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>